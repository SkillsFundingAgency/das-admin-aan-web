﻿@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SFA.DAS.Aan.SharedUi.Models.NetworkDirectory;
@using SFA.DAS.Aan.SharedUi.Extensions;
@using SFA.DAS.Aan.SharedUi.Constants;

@model NetworkDirectoryViewModel

<div class="govuk-!-margin-top-0">
    <ol class="das-search-results__list">
        @foreach (var networkDirectory in Model.Members)
        {
            <li class="das-search-results__list-item">
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-one-half">
                        <label class="govuk-label"><a href="@networkDirectory.MemberProfileLink" class="das-search-results__link">@networkDirectory.FullName</a></label>
                    </div>
                </div>
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-one-quarter">
                        <strong class="govuk-tag app-tag app-tag--@networkDirectory.UserRole.ToString()">@networkDirectory.UserRole.GetDescription()</strong>
                    </div>
                    <div class="govuk-grid-column-one-quarter">
                        <strong class="govuk-tag app-tag ()">Active</strong>
                    </div>
                    <div class="govuk-grid-column-one-quarter">
                        <label class="govuk-label govuk-!-font-size-14">Joined on: @networkDirectory.JoinedDate.ToString("dd/MM/yyyy")</label>
                    </div>
                    <div class="govuk-grid-column-one-quarter">
                        <label class="govuk-label govuk-!-font-size-14">Region: @networkDirectory.RegionName</label>
                    </div>
                </div>
            </li>
        }
    </ol>
</div>