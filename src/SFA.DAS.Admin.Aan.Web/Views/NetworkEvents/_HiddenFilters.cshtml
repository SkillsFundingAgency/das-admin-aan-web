@using SFA.DAS.Admin.Aan.Web.Extensions
@model SFA.DAS.Admin.Aan.Web.Models.NetworkEvents.NetworkEventsViewModel

@Html.Hidden("location", Model.FilterChoices.Location, new { id = "hidden-location"})
@Html.Hidden("radius", Model.FilterChoices.Radius, new { id = "hidden-radius" })
@Html.Hidden("fromDate", Model.FilterChoices.FromDate?.ToApiString(), new { id = "hidden-fromDate" })
@Html.Hidden("toDate", Model.FilterChoices.ToDate?.ToApiString(), new { id = "hidden-toDate" })

@foreach (var lookup in Model.FilterChoices.ShowUserEventsOnlyChecklistDetails.Lookups.Where(x => x.Checked == "checked"))
{
    <input type="hidden"
           id="hidden-@Model.FilterChoices.ShowUserEventsOnlyChecklistDetails.QueryStringParameterName-@lookup.Value"
           name="@Model.FilterChoices.ShowUserEventsOnlyChecklistDetails.QueryStringParameterName"
           value="@lookup.Value" />
}

