@model SFA.DAS.Admin.Aan.Web.Models.ManageEvent.IsAtSchoolViewModel
@{
    ViewData["Title"] = "Create Calendar Event";
}

<partial name="_validationSummary" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
       
        <form asp-route="@Model.PostLink" method="POST">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-l">
                <span class="govuk-caption-l">@Model.PageTitle</span>
            </h1>
            <input type="hidden" asp-for="@Model.PageTitle" />
            <input type="hidden" asp-for="@Model.PostLink"/> 
            <input type="hidden" asp-for="@Model.CancelLink"/>

            <div esfa-validation-marker-for="@Model.IsAtSchool" class="govuk-form-group" >
                <span asp-validation-for="IsAtSchool" class="govuk-error-message"></span>
                    <div id="IsAtSchool" class="govuk-radios" data-module="govuk-radios">
                    <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        Is this event held at a school?
                    </legend>
                    <div class="govuk-radios__item">
                        <input asp-for="IsAtSchool" id="true" class="govuk-radios__input" type="radio" value="true"
                               sfa-validationerror-class="form-control-error">
                        <label class="govuk-label govuk-radios__label" for="true">
                            Yes
                        </label>
                    </div>
                    <div class="govuk-radios__item">
                        <input asp-for="IsAtSchool" id="false" class="govuk-radios__input" type="radio" value="false"
                               sfa-validationerror-class="form-control-error">
                        <label class="govuk-label govuk-radios__label" for="false">
                            No
                        </label>
                    </div>
                    </fieldset>
                </div>
            </div>
            <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
            <div class="govuk-button-group">
                <button type="submit" id="continue" class="govuk-button" data-disable-on-submit="true">Continue</button>
                <a href="@Model.CancelLink" class="govuk-link">Cancel</a>
            </div>
        </div>
        </form>
    </div>
</div>